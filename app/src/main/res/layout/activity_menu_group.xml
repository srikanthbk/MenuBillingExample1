<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.sribilling.menubillingexample.MenuGroupActivity">

    <!--Make sure to save two images home and youtube in drawable folder-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please Select Food Category"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffff"/>
    <ImageButton
        android:id="@+id/simpleImageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:src="@drawable/home"
        android:background="@drawable/button_clk_change"/>

    <ImageButton
        android:id="@+id/simpleImageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/simpleImageButton1"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/home"
        android:background="@drawable/button_clk_change"/>
    <ImageButton
        android:id="@+id/simpleImageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/simpleImageButton1"
        android:padding="20dp"
        android:src="@drawable/home"
        android:background="@drawable/button_clk_change"/>
    <ImageButton
        android:id="@+id/simpleImageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/simpleImageButton2"
        android:layout_below="@+id/simpleImageButton1"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/home"
        android:background="@drawable/button_clk_change"/>
</RelativeLayout>
